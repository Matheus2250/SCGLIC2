# BANCO DE DADOS
# Formato: postgresql://usuario:senha@host:porta/database
DATABASE_URL=postgresql://postgres:sua_senha@localhost:5432/sistema_contratacoes

# SEGURANÇA
SECRET_KEY=sua-chave-secreta-super-segura-aqui-256-bits
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AMBIENTE
ENVIRONMENT=development

